{
    "name": "game-of-life",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": "16"
    },
    "dependencies": {
        "@chakra-ui/icons": "^2.0.16",
        "@chakra-ui/react": "^2.4.8",
        "@emotion/css": "^11.10.5",
        "@emotion/react": "^11.10.5",
        "@emotion/styled": "^11.10.5",
        "framer-motion": "^8.4.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-fps": "^1.0.6",
        "typescript": "^4.9.3",
        "use-interval": "^1.4.0",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "prepare": "husky install",
        "start": "vite",
        "build": "vite build",
        "format": "prettier --write .",
        "lint": "eslint .",
        "test": "jest",
        "test:staged": "jest --findRelatedTests --bail"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.18.3",
        "@types/react": "^18.0.25",
        "@types/react-dom": "^18.0.9",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "eslint": "^8.28.0",
        "husky": "^8.0.2",
        "jest": "^29.5.0",
        "jest-dom": "^4.0.0",
        "jest-environment-jsdom": "^29.5.0",
        "lint-staged": "^13.0.4",
        "prettier": "^2.8.0",
        "ts-jest": "^29.0.5",
        "vite": "^4.2.1"
    },
    "lint-staged": {
        "**/*.{ts,tsx}": [
            "npm run format",
            "npm run lint",
            "npm run test:staged"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
