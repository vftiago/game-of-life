{
  "name": "game-of-life",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@mantine/core": "^7.7.0",
    "@mantine/hooks": "^7.7.0",
    "@tabler/icons-react": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.4.3",
    "use-interval": "^1.4.0"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "vite",
    "build": "vite build",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest",
    "test:staged": "jest --findRelatedTests --passWithNoTests --bail"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^13.0.4",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "^1.13.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.2",
    "vite": "^5.1.3"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "npm run format",
      "npm run lint",
      "npm run test:staged"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
